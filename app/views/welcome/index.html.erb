<h1>Welcome to Booyah</h1>
<p>Get PHYSICAL again with pictures.. easily</p>

<h1>New User</h1>
<p>US only</p>
<%= form_for @user, :url => users_path do |user| %>
  <%= user.text_field 'email', :placeholder => 'Email' %>
  <%= user.text_field 'name', :placeholder => 'Name (ex: Jordan Nemrow)' %>
  <%= user.text_field 'cell', :placeholder => 'Cell Phone (ex: (555) 555-555)', :class => 'cell_formatted' %>
  <%= user.text_field 'password', :placeholder => 'Password' %>
  <%= user.submit 'Join!' %>
<% end %>

<p class="test"></p>

<script type="text/javascript">
  $(document).ready(function(){
    $('.cell_formatted').mask("(999) 999-9999", {placeholder:" "});
  });
</script>


